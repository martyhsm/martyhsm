{
  "name": "@marty/martyhsm",
  "private": false,
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap",
    "publish": "lerna run tsc && lerna publish",
    "test": "lerna run jest",
    "commit": "yarn format && git add . && npx git-cz",
    "format": "lerna run format"
  },
  "keywords": [
    "marty",
    "hsm",
    "hierarchical",
    "state",
    "machine",
    "statechart",
    "instruction",
    "UML"
  ],
  "author": "Brandon Phillips <brandon.phillips@live.com>",
  "contributors": [
    "Brandon Phillips <brandon.phillips@live.com>"
  ],
  "license": "BSD-3-Clause",
  "description": "This is an implementation of a hierarchical state machine (HSM) or a statechart with a few new features like:\r - instruction queuing\r - event payloads\r - \"parallel\" state machines",
  "main": "lib/index.js",
  "devDependencies": {
    "@types/node": "^13.7.1",
    "cz-conventional-changelog": "3.1.0",
    "lerna": "^3.20.2",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "rxjs": "^6.5.4"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/martyhsm/martyhsm.git"
  },
  "bugs": {
    "url": "https://github.com/martyhsm/martyhsm/issues"
  },
  "homepage": "https://github.com/martyhsm/martyhsm/tree/master/packages/marty#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
